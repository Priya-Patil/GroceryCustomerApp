<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_list"
        android:elevation="4dp"
        android:layout_width="160dp"
        android:layout_height="240dp"
        app:cardCornerRadius="4dp"
        android:paddingBottom="5dp"
        tools:targetApi="lollipop"
        android:layout_margin="5dp"
        app:cardElevation="@dimen/padding_5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="55dp"
                android:layout_height="19dp"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:text="29%OFF"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/roundedrectgreen"
                />

            <TextView
                android:id="@+id/tv_available"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:text="29%OFF"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:id="@+id/iv_items"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:id="@+id/tv_iv_label"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title1"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="start" />

            <TextView
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:id="@+id/tv_details"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="start"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="12sp"
                android:textColor="@color/light_grey_"
                android:textAlignment="textStart"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:id="@+id/tv_ourprice"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 40/-"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:gravity="start" />

                <TextView
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_ActualPrice"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 40/-"
                    android:textAlignment="center"
                    android:gravity="end"
                    />

            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/addtocart"
                android:drawableStart="@drawable/ic_add_shopping_cart_black_24dp"
                android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:text="Add to cart"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/padding_5"
                    android:visibility="visible"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_delete_black_24dp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/padding_5"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>