<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:id="@+id/cv_customerItem"
    app:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textMediumSize"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textMediumSize"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_name"/>

            <LinearLayout
                android:id="@+id/ll_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_address"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_mob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:id="@+id/view_vert"
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:background="@color/grey_20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/tv_address"
                    android:layout_toRightOf="@id/tv_mob"
                    android:visibility="visible"
                    android:layout_marginTop="6dp">
                </View>

                <TextView
                    android:id="@+id/tv_paymentmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:drawableLeft="@drawable/ic_credit_card"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tv_mob"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_address"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_con"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_savePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:drawableLeft="@drawable/ic_credit_card"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:background="@color/grey_20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/tv_address"
                    android:layout_toRightOf="@id/tv_mob"
                    android:visibility="visible"
                    android:layout_marginTop="6dp">
                </View>

                <TextView
                    android:id="@+id/tv_ActualPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:drawableLeft="@drawable/ic_credit_card"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tv_mob"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/tv_address"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/ll_info">

            <LinearLayout
                android:id="@+id/ll_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_staus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/padding_5" />

                <TextView
                    android:id="@+id/tv_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:id="@+id/view_vert1"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/grey_20"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@id/ll_status1"
                android:visibility="visible">
            </View>

            <LinearLayout
                android:id="@+id/ll_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/view_vert1"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_staus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/padding_5"
                    />

                <TextView
                    android:id="@+id/tv_approved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:id="@+id/view_vert2"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/grey_20"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@id/ll_status2"
                android:visibility="visible">

            </View>

            <LinearLayout
                android:id="@+id/ll_status3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/view_vert2"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_staus3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/padding_5" />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/textMediumSize"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_registrationNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:paddingTop="3dp"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/iv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_order"
                    android:padding="@dimen/padding_5"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    />

                <ImageView
                    android:id="@+id/iv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/order_list"
                    android:padding="@dimen/padding_5"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_20"
                android:layout_marginTop="10dp"
                android:layout_below="@id/ll_status3">
            </View>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>